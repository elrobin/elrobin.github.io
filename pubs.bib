	journal = {Journal of Informetrics},
	author = {Torres-Salinas, Daniel and Rodríguez-Sánchez, Rosa and Robinson-García, Nicolás and Fdez-Valdivia, J. and García, J. A.},
	month = apr,
	year = {2013},
	keywords = {citation analysis, Academic publishers, Information gain, Books, Databases, Book chapters, Book citation index, Lotkaian distribution},
	pages = {412--424},
	file = {ScienceDirect Full Text PDF:C\:\\Users\\Nicolas\\Zotero\\storage\\HBGUCM9M\\Torres-Salinas et al. - 2013 - Mapping citation patterns of book chapters in the .pdf:application/pdf;ScienceDirect Snapshot:C\:\\Users\\Nicolas\\Zotero\\storage\\KETZ3H4B\\S1751157713000060.html:text/html},
}


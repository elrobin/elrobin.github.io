	author = {Torres-Salinas, Daniel and Robinson-García, Nicolás and Cabezas-Clavijo, Álvaro and Jiménez-Contreras, Evaristo},
	year = {2014},
	keywords = {Information Storage and Retrieval, Interdisciplinary Studies, Library Science, Books, Monographs, Databases, Book citation index, Publishers, Highly cited},
	pages = {2113--2127},
